{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/config/*": [
        "config/*"
      ],
      "@/controllers/*": [
        "controllers/*"
      ],
      "@/middlewares/*": [
        "middlewares/*"
      ],
      "@/models/*": [
        "models/*"
      ],
      "@/routes/*": [
        "routes/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/types/*": [
        "types/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "prisma/seed.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
  ]
}