{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
        "dist",
    ]
}