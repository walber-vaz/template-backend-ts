{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@": [
        "./src/*"
      ],
      "@/controllers": [
        "./src/controllers/*"
      ],
      "@/models": [
        "./src/models/*"
      ],
      "@/services": [
        "./src/services/*"
      ],
      "@/utils": [
        "./src/utils/*"
      ],
      "@/middlewares": [
        "./src/middlewares/*"
      ],
      "@/types": [
        "./src/types/*"
      ],
      "@/config": [
        "./src/config/*"
      ],
      "@/routes": [
        "./src/routes/*"
      ],
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist"
  ]
}