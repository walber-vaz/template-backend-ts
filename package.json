{
  "name": "template-backend-ts",
  "version": "1.0.0",
  "main": "src/server.ts",
  "author": "Walber Vaz da Silva <wvs.walber@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "if [ -d dist ]; then rm -rf dist; fi && tsc && tsc-alias && prisma generate",
    "dev": "nodemon --config nodemon.json",
    "start": "node dist/server.js",
    "lint": "eslint --ext .ts ./src && prettier --check ./src",
    "lint:fix": "eslint --ext .ts ./src --fix && prettier --write ./src",
    "prisma": "prisma",
    "prisma:seed": "prisma db seed",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "ncu": "ncu -i --dep=prod,dev --format group -p yarn"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.10.16",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "*"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
