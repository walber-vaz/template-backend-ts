{
    "name": "template-backend-ts",
    "version": "1.0.0",
    "main": "src/server.ts",
    "author": "Walber Vaz da Silva <wvs.walber@gmail.com>",
    "license": "MIT",
    "scripts": {
        "prebuild": "npm run prisma:generate && rimraf dist",
        "build": "tsup --config tsup.config.ts",
        "predev": "npm run prisma:generate && kill-port 3333",
        "dev": "npm run predev && tsx watch src/server.ts",
        "start": "node dist/server.js",
        "lint": "eslint ./src && prettier --check ./src",
        "lint:fix": "eslint ./src --fix && prettier --write ./src",
        "ncu": "ncu -i --dep=prod,dev --format group -p npm",
        "prepare": "husky",
        "pre-commit": "lint-staged",
        "commit": "cz"
    },
    "dependencies": {
        "@prisma/client": "^5.18.0",
        "compression": "^1.7.4",
        "express-validator": "^7.2.0",
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "helmet": "^7.1.0",
        "rimraf": "^6.0.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@tsconfig/node20": "^20.1.4",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.5.0",
        "npm-check-updates": "^17.1.0",
        "typescript-eslint": "^8.2.0",
        "prettier": "^3.3.3",
        "prisma": "^5.18.0",
        "rimraf": "^6.0.1",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.18.0",
        "typescript": "^5.5.4",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.9.0",
        "husky": "^9.1.5",
        "kill-port": "^2.0.1",
        "lint-staged": "^15.2.9",
        "@commitlint/cli": "^19.4.0",
        "@commitlint/config-conventional": "^19.2.2",
        "tsup": "^8.2.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "engines": {
        "node": "20"
    }
}
