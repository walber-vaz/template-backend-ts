{
  "name": "template-backend-ts",
  "version": "1.0.0",
  "main": "src/server.ts",
  "author": "Walber Vaz da Silva <wvs.walber@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "if [ -d dist ]; then rm -rf dist; fi && tsc && tsc-alias && prisma generate",
    "dev": "nodemon --config nodemon.json",
    "start": "node dist/server.js",
    "lint": "eslint --ext .ts ./src && prettier --check ./src",
    "lint:fix": "eslint --ext .ts ./src --fix && prettier --write ./src",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset --force && prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "ncu": "ncu -i --dep=prod,dev --format group -p npm"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.14.6",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "*"
  }
}
